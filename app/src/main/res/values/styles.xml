<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/color_dddddd</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
<!--
        <item name="colorControlHighlight">@color/colorPrimary</item>
-->
        <item name="android:actionMenuTextAppearance">@style/ActionbarMenuTextAppearance</item>
        <item name="actionMenuTextAppearance">@style/ActionbarMenuTextAppearance</item>

        <item name="listPreferredItemPaddingLeft">30dp</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="Alert.DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/color_890000</item>
        <item name="android:textColorPrimary">@color/color_890000</item>
        <item name="android:buttonStyle">@style/alertButtonStyle</item>
    </style>

    <style name="alertButtonStyle">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ActionbarMenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:listPreferredItemHeightSmall">60dp</item>
    </style>

    <!-- pattern -->

    <style name="Base.PatternView" parent="">
        <item name="rowCount">3</item>
        <item name="columnCount">3</item>
        <item name="aspect">square</item>
    </style>

    <style name="PatternView" parent="Base.PatternView">
        <item name="regularColor">?colorControlNormal</item>
        <item name="errorColor">#fff4511e</item>
        <item name="successColor">?colorControlActivated</item>
    </style>

    <style name="PatternView.Light" parent="Base.PatternView">
        <item name="regularColor">?colorControlNormal</item>
        <item name="errorColor">#fff4511e</item>
        <item name="successColor">?colorControlActivated</item>
    </style>

</resources>
