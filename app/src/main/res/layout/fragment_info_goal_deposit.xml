<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="32dp"
        android:id="@+id/descriptionField"
        android:textColor="@color/color_212121"
        android:textSize="14sp"
        android:text="@string/goal_info_depoisit_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.android.kreators.tortoise.view.keyboard.NumberKeyboard
        android:visibility="invisible"
        android:tag="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/numberKeyboard"
        android:layout_width="match_parent"
        android:layout_height="224dp" />

    <RelativeLayout
        android:layout_above="@id/numberKeyboard"
        android:layout_below="@id/descriptionField"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.android.kreators.tortoise.view.hexagon.Hexagon
            android:layout_centerInParent="true"
            android:id="@+id/hexagon"
            android:background="@color/transparent_color"
            android:layout_width="270dp"
            android:layout_height="270dp"/>

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/editField"
            android:textSize="42sp"
            android:textColor="@color/color_212121"
            android:hint="@string/add_deposit_field_hint"
            android:textColorHint="@color/color_bdbdbd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_above="@id/editField"
            android:id="@+id/whyField"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="@string/why_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>

