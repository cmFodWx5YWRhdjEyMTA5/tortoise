<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.android.kreators.tortoise.view.keyboard.NumberKeyboard
        android:id="@+id/numberKeyboard"
        android:paddingBottom="14dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_above="@id/numberKeyboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.android.kreators.tortoise.view.hexagon.Hexagon
            android:layout_centerInParent="true"
            android:id="@+id/hexagon"
            android:layout_width="280dp"
            android:layout_height="280dp" />

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:paddingBottom="20dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/descriptionField"
                android:text="@string/add_deposit_description"
                android:textSize="12sp"
                android:textColor="@color/color_212121"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_below="@id/descriptionField"
                android:layout_centerHorizontal="true"
                android:id="@+id/editField"
                android:textSize="40sp"
                android:textColor="@color/color_dddddd"
                android:hint="@string/add_deposit_field_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
